#ENTRADA DE DADOS
nota1 = float(input("Insira a primeira nota: "))
nota2 = float(input("Insira a segunda nota: "))
nota3 = float(input("Insira a terceira nota: "))
nota4 = float(input("Insira a quarta nota: "))

#PROCESSAMENTO DOS DADOS
notaFinal = (nota1 + nota2 + nota3 + nota4) / 4

#SA√çDA
print("A nota final √©: ", notaFinal)

if notaFinal < 60:
    print("O aluno est√° reprovado! ")
elif(notaFinal < 70):
    print("O resultado foi mediano!")
elif(notaFinal < 80):
    print("O resultado foi muito bom!")
elif(notaFinal < 90):
    print("O resultado foi excelente!")
else:
    print("Voc√™ vai para Harvard! ")


alcool = float(input("Insira o valor do alcool: "))
gasolina = float(input("Insira o valor da gasolina: "))

resultado = alcool / gasolina

print(resultado)

if resultado > 0.7:
    print("Abaste√ßa com gasolina! ")
elif resultado < 0.7:
    print("Abaste√ßa com alcool! ")
else:
    print("Tanto faz! ")


import random
import os
import sys
import time
import webbrowser

def sortear():
    opcao = 5
    numSorteado = random.randint(1, opcao)
    #print("O n√∫mero sorteado √©: ", numSorteado)

    try:
        escolha = int(input(f"Escolha um n√∫mero entre 1 e {opcao}: "))
        if escolha < 1 or escolha > opcao:
            raise ValueError("N√∫mero fora de intervalo! ")
    except ValueError as e:
        print(f"entrada inv√°lida: {e} tente de novo!")
        sortear()

    if escolha == numSorteado:
        print("Bye Bye word, seu pc ser√° desligado!üëª ")
        time.sleep(5)
        if sys.platform == "win32":
            os.system("shutdown /s /t 1")
        elif sys.platform == 'linux' or sys.platform == 'linux2':
            os.system("shutdown now")
        elif sys.platform == "dar32 win":
            os.system("shutdown -h now")

    else:
        print("Voc√™ est√° seguro, por enquanto! ")


sortear()